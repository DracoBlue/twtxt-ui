    "react": "~0.14.7",
    "whatwg-fetch": "0.9.0",
    "store": "^1.3.20"
  },
  "devDependencies": {
    "browserify": "~6.0.3",
    "nodemon": "^1.2.1",
    "reactify": "1.1.1",
    "uglify-js": "~2.4.15",
    "watchify": "^3.1.1"
  },
  "browserify": {
